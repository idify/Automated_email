 <script>
$(function() {

$("table#myTableId").dataTable({"bFilter": false,
                              "sPaginationType": "full_numbers"});
});
</script>
<table class="table table-striped table-bordered table-condensed table-hover" id = "myTableId">
<thead>
<tr>
  <th>NAME</th>
  <th>EMAIL</th>
  <th>SUBJECT</th>
  <th>BODY</th>
  <th>DATE</th>
  <th>DELIVERY STATUS</th>
  <th>SEENED</th>
  <th></th>
  <th></th>
  <th></th>
</tr></thead>
<tbody>
<% @mailes.each do |f| %>
<tr>
  <td><%= f.name %></td>
  <td><%= f.email %></td>
  <td><%= f.subject %></td>
  <td><%= f.body %></td>
  <td><%= f.date %></td>
  <td><%= f.delivery_status %></td> 
  <td><%= image_tag("/assets/#{f.seened}.jpg", :size => "16x16")  %></td> 
  <td><%= link_to 'Show' ,maile_path(f) ,class: "btn btn-primary"%></td>
  <td><%= link_to 'Edit' ,edit_maile_path(f) ,class: "btn btn-success"%></td>
  <td><%= link_to 'Destroy',f, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>

  
</tr>
<% end %>
</tbody>
</table>
<br />

<%#= will_paginate @mailes, renderer: BootstrapPagination::Rails %>

